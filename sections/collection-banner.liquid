{{ 'section-collection-banner.css' | asset_url | stylesheet_tag }}

<div class="collection-banner-section">
  <div class="collection-banner-container page-width">
    <h1 class="collection-title">{{ collection.title }}</h1>
    
    <nav class="collection-breadcrumb" aria-label="Breadcrumb">
      <a href="/" class="breadcrumb-link">Home</a>
      <span class="breadcrumb-separator">|</span>
      <span class="breadcrumb-current">{{ collection.title }}</span>
    </nav>
    
    {% if collection.all_products_count > 0 %}
      <div class="collection-results-count">
        <span id="ProductCount">{{ collection.products_count }}</span> / {{ collection.all_products_count }} Results
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Collection Banner",
  "settings": []
}
{% endschema %}


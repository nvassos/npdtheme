{{ 'section-footer-simple.css' | asset_url | stylesheet_tag }}

<footer class="footer-simple">
  <div class="footer-content">
    {% if section.settings.show_logos %}
      <div class="footer-logos">
        {% if section.settings.logo1 != blank %}
          <div class="footer-logo">
            <img src="{{ section.settings.logo1 | image_url: width: 200 }}" alt="Logo 1" loading="lazy">
          </div>
        {% endif %}
        {% if section.settings.logo2 != blank %}
          <div class="footer-logo">
            <img src="{{ section.settings.logo2 | image_url: width: 200 }}" alt="Logo 2" loading="lazy">
          </div>
        {% endif %}
        {% if section.settings.logo3 != blank %}
          <div class="footer-logo">
            <img src="{{ section.settings.logo3 | image_url: width: 200 }}" alt="Logo 3" loading="lazy">
          </div>
        {% endif %}
        {% if section.settings.logo4 != blank %}
          <div class="footer-logo">
            <img src="{{ section.settings.logo4 | image_url: width: 200 }}" alt="Logo 4" loading="lazy">
          </div>
        {% endif %}
      </div>
    {% endif %}
    
    <div class="footer-links">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'link' %}
            <a href="{{ block.settings.link }}" {{ block.shopify_attributes }}>
              {{ block.settings.link_text }}
            </a>
          {% when 'text' %}
            <span {{ block.shopify_attributes }}>{{ block.settings.text }}</span>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Simple Footer",
  "tag": "section",
  "class": "section-footer-simple",
  "enabled_on": {
    "groups": ["footer"]
  },
  "settings": [
    {
      "type": "checkbox",
      "id": "show_logos",
      "label": "Show Brand Logos",
      "default": true
    },
    {
      "type": "image_picker",
      "id": "logo1",
      "label": "Logo 1"
    },
    {
      "type": "image_picker",
      "id": "logo2",
      "label": "Logo 2"
    },
    {
      "type": "image_picker",
      "id": "logo3",
      "label": "Logo 3"
    },
    {
      "type": "image_picker",
      "id": "logo4",
      "label": "Logo 4"
    }
  ],
  "blocks": [
    {
      "type": "link",
      "name": "Link",
      "settings": [
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text",
          "default": "Link"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "© 2025 Displays by MPS"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Simple Footer",
      "blocks": [
        {
          "type": "link",
          "settings": {
            "link_text": "Terms & Conditions",
            "link": "/pages/terms"
          }
        },
        {
          "type": "link",
          "settings": {
            "link_text": "Privacy Statement",
            "link": "/pages/privacy"
          }
        },
        {
          "type": "link",
          "settings": {
            "link_text": "Masco Brands",
            "link": "https://www.masco.com"
          }
        },
        {
          "type": "text",
          "settings": {
            "text": "© 2025 Displays by MPS"
          }
        }
      ]
    }
  ]
}
{% endschema %}

